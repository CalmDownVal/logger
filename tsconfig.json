{
	"compilerOptions": {
		"charset": "utf8",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"types": [
			"node"
		]
	},
	"include": [
		"./src/**/*.ts"
	]
}
